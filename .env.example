############################
# Discord
############################
DISCORD_TOKEN=your_discord_bot_token
DISCORD_BOT_TOKEN=your_discord_bot_token

############################
# Model (Ollama Cloud)
############################
MODEL_PROVIDER=ollama
OLLAMA_API_KEY=your_ollama_cloud_key
OLLAMA_MODEL=llama3.1:8b
OLLAMA_BASE_URL=https://ollama.com

############################
# Transcription (OpenAI Whisper)
############################
OPENAI_API_KEY=your_openai_key
WHISPER_MODEL=whisper-1
MAX_AUDIO_ATTACHMENTS=1
MAX_AUDIO_ATTACHMENT_BYTES=15000000

############################
# Context Window
############################
OLLAMA_CONTEXT_LENGTH=32768
OPENAI_CONTEXT_LENGTH=8192
OPENROUTER_CONTEXT_LENGTH=8192
CONTEXT_TOKENS_PER_MESSAGE=200

############################
# Memory (Postgres)
############################
DATABASE_URL=postgres://user:pass@host:5432/dbname
DATABASE_SSL=true
BOT_ID=ash-bot

############################
# Behavior
############################
RESPOND_TO_DMS=true
RESPOND_TO_MENTIONS=true
RESPOND_TO_BOTS=false
RESPOND_TO_GENERIC=true
ENABLE_AUTONOMOUS=true
ENABLE_TIMER=true
TIMEZONE=Europe/Berlin

############################
# Channels
############################
DISCORD_CHANNEL_ID=123456789012345678
HEARTBEAT_LOG_CHANNEL_ID=123456789012345678
TASKS_CHANNEL_ID=123456789012345678

############################
# Optional Identity
############################
SIN_DISCORD_ID=123456789012345678
ALLOWED_DM_USER_ID=

############################
# Optional Logging
############################
ENABLE_CONVERSATION_LOGGING=false
CONVERSATION_LOGS_DIR=./logs

############################
# Optional Spotify + Weather
############################
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REFRESH_TOKEN=
OPENWEATHER_API_KEY=
WEATHER_CITY=Munich
WEATHER_COUNTRY_CODE=de
WEATHER_LANGUAGE=de
BOT_LANGUAGE=en

############################
# Optional ElevenLabs (Voice Notes)
############################
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_MODEL_ID=eleven_v3
